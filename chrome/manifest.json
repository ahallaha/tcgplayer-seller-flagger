{
  "manifest_version": 3,
  "name": "TCGplayer Seller Flagger",
  "description": "An extension for flagging good (and bad) sellers on TCGplayer",
  "version": "1.1.4",
  "content_scripts": [
    {
      "js": ["main.min.js"],
      "css": ["styles.css"],
      "matches": [
        "https://www.tcgplayer.com/product/*",
        "https://cart.tcgplayer.com/shoppingcart"
      ]
    }
  ],
  "action": {
    "default_popup": "entry.html"
  },
  "permissions": ["storage"],
  "icons": {
    "32": "./icons/32.png"
  }
}
